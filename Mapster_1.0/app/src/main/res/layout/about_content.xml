<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="se.mah.mapster.mapster_1.AboutActivity"
    tools:showIn="@layout/about_app_bar">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />


    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:columnCount="3"
        android:rowCount="1">

        <Button
            android:id="@+id/visitUsBtn"
            android:layout_marginRight="15dp"
            android:background="@color/aboutUsColor"
            android:drawableStart="@drawable/location_icon"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Visit Us" />

        <Button
            android:id="@+id/callUsBtn"
            android:layout_marginRight="15dp"
            android:background="@color/aboutUsColor"
            android:drawableStart="@drawable/phone_icon"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Call Us" />

        <Button
            android:id="@+id/mailUsBtn"
            android:layout_marginRight="15dp"
            android:background="@color/aboutUsColor"
            android:drawableStart="@drawable/mail_icon"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Mail Us" />
    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutUsText"
        android:layout_marginTop="10dp"
        android:src="@drawable/line" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginBottom="10dp"
        android:src="@drawable/line" />


    <TextView
        android:id="@+id/aboutUsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="25dp"
        android:text="@string/aboutUsText"
        android:textAlignment="center"
        android:textSize="15dp" />

</RelativeLayout>
