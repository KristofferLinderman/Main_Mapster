<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="se.mah.mapster.mapster_07.MainActivity"
    tools:showIn="@layout/main_app_bar">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logo" />

    <GridLayout
        android:id="@+id/searchGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:columnCount="5"
        android:rowCount="2">

        <TextView
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="Building"
            android:textSize="10dp" />

        <TextView
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="Section"
            android:textSize="10dp" />

        <TextView
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="Level"
            android:textSize="10dp" />

        <TextView
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="Room"
            android:textSize="10dp" />

        <NumberPicker
            android:id="@+id/buildingPicker"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_column="0" />

        <NumberPicker
            android:id="@+id/sectionPicker"
            android:layout_width="75dp"
            android:layout_height="100dp" />

        <NumberPicker
            android:id="@+id/levelPicker"
            android:layout_width="65dp"
            android:layout_height="100dp" />

        <NumberPicker
            android:id="@+id/roomPicker"
            android:layout_width="65dp"
            android:layout_height="100dp" />

        <Button
            android:id="@+id/search_Button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorBackground"
            android:drawableStart="@drawable/search_icon" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/previous_search_scroll_view"
        android:layout_alignStart="@+id/previous_search_scroll_view"
        android:text="Previous Searches:" />

    <ScrollView
        android:id="@+id/previous_search_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="0dp"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/previous_search_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/prevshape"

                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/previous_search_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/prevshape"

                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/previous_search_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/prevshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"

                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/previous_search_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/prevshape"
                android:shadowColor="#A8A8A8"

                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/previous_search_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/prevshape"

                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
